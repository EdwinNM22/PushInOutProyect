<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PushInOutProyect.Views.Auth.Login"
             Title="Login"
             BackgroundColor="#F5F5F5">

    <StackLayout Padding="20" Spacing="15">
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" />
        <Button Text="Iniciar sesión" Clicked="OnLoginClicked" />
        <Button Text="Iniciar con huella" Clicked="OnFingerprintClicked" />
    </StackLayout>
</ContentPage>
